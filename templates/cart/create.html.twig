{% extends "base.html.twig" %}

{% block title %} Create customer {% endblock %}

{% block body %}
<div class="container-fluid mt-3">
    <h2 class="text-center mt-5">CREATE CART</h2>
    <div class="col-md-6"></div>
        {{ form_start (form) }}
            <div class="form-group">
                <p class="text-info text-bold"> Customer ID </p>
                {{ form_widget (form.userid, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <p class="text-info text-bold"> Cart ID </p>
                {{ form_widget (form.productid, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group text-center mt-3">
                <button class="btn btn-outline-primary btn-lg">CREATE</button>
            </div>
        {{ form_end (form)}}
</div>   
{% endblock %}