{% extends "base.html.twig" %}

{% block title %} Create customer {% endblock %}

{% block body %}
<div class="container-fluid mt-3">
    <h2 class="text-center mt-5">CREATE CUSTOMER</h2>
    <div class="col-md-6"></div>
        {{ form_start (form) }}
            <div class="form-group">
                <p class="text-info text-bold"> Customer Name </p>
                {{ form_widget (form.name, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <p class="text-info text-bold"> Customer Fullname </p>
                {{ form_widget (form.fullname, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <p class="text-info text-bold"> Customer Adress </p>
                {{ form_widget (form.address, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <p class="text-info text-bold"> Customer Phone </p>
                {{ form_widget (form.phone, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <p class="text-info text-bold"> Customer Email </p>
                {{ form_widget (form.email, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <p class="text-info text-bold"> Password </p>
                {{ form_widget (form.password, {'attr': {'class' : 'form-control'}}) }}
            </div>
            {#<div class="form-group">
                <p class="text-info text-bold"> User Image </p>
                {{ form_widget (form.Image, {'attr': {'class' : 'form-control'}}) }}
            </div>
            #}
            <div class="form-group text-center mt-3">
                <button class="btn btn-outline-primary btn-lg">CREATE</button>
            </div>
        {{ form_end (form)}}
</div>   
{% endblock %}